                           HorizontalAlignment="Center"
                           Content="{Binding Error_Details_Address, Mode=TwoWay}"
                           Foreground="#E50914" />
                    <Label Grid.Row="16"
                           Grid.Column="3"
                           HorizontalAlignment="Center"
                           Content="{Binding Error_Details_City, Mode=TwoWay}"
                           Foreground="#E50914" />
                    <Label Grid.Row="16"
                           Grid.Column="1"
                           Grid.ColumnSpan="3"
                           HorizontalAlignment="Center"
                           Content="{Binding Error_Details_AddressComplete, Mode=TwoWay}"
                           Foreground="#E50914" />



                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Details_Lastname"
                                 Grid.Row="0"
                                 GotFocus="txt_Details_Lastname_GotFocus"
                                 LostFocus="txt_Details_Lastname_LostFocus"
                                 TabIndex="31"
                                 Text="{Binding Customer_Selected.Person_id.Lastname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged_Details" />
                        <Separator x:Name="Separator_Details_Lastname" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="7" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Details_Phone"
                                 Grid.Row="0"
                                 GotFocus="txt_Details_Phone_GotFocus"
                                 LostFocus="txt_Details_Phone_LostFocus"
                                 PreviewTextInput="Phone_PreviewTextInput"
                                 TabIndex="33"
                                 Text="{Binding Customer_Selected.Person_id.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged_Details" />
                        <Separator x:Name="Separator_Details_Phone" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="11" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <DatePicker x:Name="Dp_Details_BornDate"
                                    Padding="4,6"
                                    VerticalContentAlignment="Center"
                                    CalendarStyle="{StaticResource StyleCalendar}"
                                    GotFocus="Dp_Details_BornDate_GotFocus"
                                    LostFocus="Dp_Details_BornDate_LostFocus"
                                    PreviewTextInput="Date_PreviewTextInput"
                                    SelectedDate="{Binding Customer_Selected.Borndate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedDateChanged="UpdateSelectionChanged_Details"
                                    TabIndex="35"
                                    Validation.ErrorTemplate="{x:Null}" />
                        <Separator x:Name="Separator_Details_BornDate" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="15" Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Details_City"
                                 Grid.Row="0"
                                 GotFocus="txt_Details_City_GotFocus"
                                 LostFocus="txt_Details_City_LostFocus"
                                 TabIndex="38"
                                 Text="{Binding Customer_Selected.Address_id.City_id.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged_Details" />
                        <Separator x:Name="Separator_Details_City" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Details_Firstname"
                                 Grid.Row="0"
                                 GotFocus="txt_Details_Firstname_GotFocus"
                                 LostFocus="txt_Details_Firstname_LostFocus"
                                 TabIndex="32"
                                 Text="{Binding Customer_Selected.Person_id.Firstname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged_Details" />
                        <Separator x:Name="Separator_Details_Firstname" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="7" Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Details_Mail"
                                 Grid.Row="0"
                                 GotFocus="txt_Details_Mail_GotFocus"
                                 LostFocus="txt_Details_Mail_LostFocus"
                                 TabIndex="34"
                                 Text="{Binding Customer_Selected.Person_id.Mail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged_Details" />
                        <Separator x:Name="Separator_Details_Mail" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="11" Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Details_Address"
                                 Grid.Row="0"
                                 GotFocus="txt_Details_Address_GotFocus"
                                 LostFocus="txt_Details_Address_LostFocus"
                                 TabIndex="36"
                                 Text="{Binding Customer_Selected.Address_id.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged_Details" />
                        <Separator x:Name="Separator_Details_Address" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="15" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Details_PostalCode"
                                 Grid.Row="0"
                                 GotFocus="txt_Details_PostalCode_GotFocus"
                                 LostFocus="txt_Details_PostalCode_LostFocus"
                                 PreviewTextInput="Int_PreviewTextInput"
                                 TabIndex="37"
                                 Text="{Binding Customer_Selected.Address_id.City_id.PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged_Details" />
                        <Separator x:Name="Separator_Details_PostalCode" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="18"
                          Grid.Column="1"
                          Grid.ColumnSpan="3"
                          VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Width="250"
                               Content="Nombre de points de fidelité"
                               Foreground="white" />
                        <TextBox x:Name="txt_Details_Fidelity"
                                 Grid.Row="1"
                                 Width="250"
                                 IsReadOnly="True"
                                 Text="{Binding Customer_Selected.Loyalty_points, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Separator x:Name="Separator_Details_Fidelity"
                                   Grid.Row="2"
                                   Width="250"
                                   Height="1px"
                                   Margin="0"
                                   Background="#474D73" />
                    </Grid>


                    <Grid Grid.Row="19"
                          Grid.Column="1"
                          Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="95" />
                        </Grid.ColumnDefinitions>

                        <Label x:Name="Btn_Details_Modify_Label"
                               Grid.Column="1"
                               Height="30"
                               Margin="0,-1"
                               HorizontalAlignment="Center"
                               Content="{Binding UpdateCustomer_Content, Mode=TwoWay}"
                               Foreground="#EDC664"
                               Visibility="Visible" />
                        <Button x:Name="Btn_Details_Modify"
                                Grid.Column="1"
                                Height="{Binding UpdateCustomer_Height, Mode=TwoWay}"
                                Command="{Binding UpdateCustomerBtn}"
                                Content="Modifier"
                                Style="{StaticResource BtnAction}" />
                        <Button x:Name="Btn_Details_Cancel"
                                Grid.Column="2"
                                Click="Btn_Details_Cancel_Click"
                                Content="Revenir à la liste"
                                Style="{StaticResource BtnAction}" />


                    </Grid>

                </Grid>
            </TabItem>
            <!--#endregion-->


        </TabControl>

    </Grid>

</UserControl>
