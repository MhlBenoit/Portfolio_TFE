                                 PreviewTextInput="Decimal_PreviewTextInput"
                                 Text="{Binding Add_SellingPrice, StringFormat=C, ConverterCulture=FR-fr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged" />
                        <Separator x:Name="Separator_Finalize_SellingPrice" Style="{StaticResource SubTxt}" />
                    </Grid>

                    <Grid Grid.Row="18" Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Finalize_Promo"
                                 Grid.Row="0"
                                 GotFocus="txt_Finalize_Promo_GotFocus"
                                 LostFocus="txt_Finalize_Promo_LostFocus"
                                 Text="{Binding Article_ToFinalize_Selected.Price_info_id.Promotion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="UpdateTextChanged" />
                        <Separator x:Name="Separator_Finalize_Promo" Style="{StaticResource SubTxt}" />
                    </Grid>


                    <Label x:Name="Btn_Finalize_Deposit_Label"
                           Grid.Row="21"
                           Grid.Column="1"
                           Grid.ColumnSpan="3"
                           Height="30"
                           Margin="0,-1"
                           HorizontalAlignment="Center"
                           Content="{Binding FinalizeArticle_Content, Mode=TwoWay}"
                           Foreground="#EDC664"
                           Visibility="Visible" />

                    <Button x:Name="Btn_Finalize_Deposit"
                            Grid.Row="21"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Height="{Binding FinalizeArticle_Height, Mode=TwoWay}"
                            Command="{Binding FinalizeArticleBtn}"
                            Content="Valider le dépôt"
                            Style="{StaticResource BtnAction}" />

                </Grid>

            </TabItem>
            <!--#endregion-->

        </TabControl>

    </Grid>

</UserControl>
