                    <DataGrid x:Name="Listing_Refund_Bill_After"
                              Grid.Row="5"
                              Grid.Column="1"
                              Grid.ColumnSpan="5"
                              ItemsSource="{Binding Listing_Transaction_Sale_Refund, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValue="{Binding Refund_After_Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectionChanged="Listing_Refund_Bill_After_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="85"
                                                Binding="{Binding Article_id.Ean_code}"
                                                Header="EAN" />
                            <DataGridTextColumn Width="*"
                                                Binding="{Binding Article_id.Name}"
                                                Header="Nom" />
                            <DataGridTextColumn Width="70"
                                                ElementStyle="{StaticResource CellRightAlign}"
                                                Header="Prix">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{ikriv:MathConverter}"
                                                  ConverterCulture="FR-fr"
                                                  ConverterParameter="x/y"
                                                  StringFormat="C">
                                        <Binding Path="Total" />
                                        <Binding Path="Quantity" />
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding Quantity}"
                                                ElementStyle="{StaticResource CellRightAlign}"
                                                Header="Quantité" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="4"
                          Grid.RowSpan="2"
                          Grid.Column="7"
                          HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="31" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="31" />
                            <RowDefinition Height="15" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="31" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="1"
                               Content="Quantitée à rembourser"
                               Foreground="#EDC664" />
                        <Label Grid.Row="4"
                               Content="Somme à rendre"
                               Foreground="#EDC664" />
                        <Label Grid.Row="10"
                               Content="Réduction lors de l'achat"
                               Foreground="#EDC664" />

                        <Label Grid.Row="3"
                               HorizontalAlignment="Center"
                               Content="{Binding Error_Refund, Mode=TwoWay}"
                               Foreground="#E50914" />

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>
                            <TextBox x:Name="txt_Refund_Bill_QuantityToRefund"
                                     PreviewTextInput="Int_PreviewTextInput"
                                     Text="{Binding Refund_Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Separator Style="{StaticResource SubTxt}" />
                        </Grid>

                        <Grid Grid.Row="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>
                            <TextBox x:Name="txt_Refund_Bill_TotalToRefund"
                                     IsReadOnly="True"
                                     Text="{Binding Refund_Back, StringFormat=C, ConverterCulture='FR-fr', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Separator Style="{StaticResource SubTxt2}" />
                        </Grid>

                        <Grid Grid.Row="11">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>
                            <TextBox x:Name="txt_Refund_Bill_Reduction"
                                     IsReadOnly="True"
                                     Text="{Binding Transaction_Sale_Selected.Reduction, StringFormat=C, ConverterCulture='FR-fr'}" />
                            <Separator Style="{StaticResource SubTxt2}" />
                        </Grid>

                        <Button x:Name="Btn_Refund_Modify"
                                Grid.Row="8"
                                Command="{Binding RefundQuantityBtn}"
                                Content="Modifier"
                                IsEnabled="False"
                                Opacity="0.5"
                                Style="{StaticResource BtnAction}" />

                    </Grid>

                    <Grid Grid.Row="7" Grid.ColumnSpan="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label x:Name="Btn_Refund_Validate_Label"
                               Grid.Row="7"
                               Grid.Column="1"
                               Height="30"
                               Margin="0,-1"
                               HorizontalAlignment="Center"
                               Content="{Binding ValidRefund_Content, Mode=TwoWay}"
                               Foreground="#EDC664"
                               Visibility="Visible" />

                        <Button x:Name="Btn_Refund_Validate"
                                Grid.Row="7"
                                Grid.Column="1"
                                Width="300"
                                Height="{Binding ValidRefund_Height, Mode=TwoWay}"
                                Margin="50,0"
                                Command="{Binding ValidRefundBtn}"
                                Content="Valider ce remboursement"
                                Style="{StaticResource BtnAction}" />

                        <Button x:Name="Btn_Refund_Cancel"
                                Grid.Row="7"
                                Grid.Column="2"
                                Margin="50,0"
                                Click="Btn_Refund_Cancel_Click"
                                Command="{Binding RefreshBtn}"
                                Content="Revenir à la liste"
                                Style="{StaticResource BtnAction}" />
                    </Grid>
                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region LISTING REFUND-->
            <TabItem Header="LISTING REFUND">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="15" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <Image Grid.RowSpan="50"
                           Grid.ColumnSpan="50"
                           VerticalAlignment="Bottom"
                           Source="../Resources/Login_BG3.png"
                           Stretch="Uniform" />

                    <Grid Grid.Row="1"
                          Grid.Column="1"
                          Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="29" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Listing_Refund_Number"
                                 GotFocus="txt_Listing_Refund_Number_GotFocus"
                                 LostFocus="txt_Listing_Refund_Number_LostFocus"
                                 MouseEnter="Search_Refund_Number_MouseEnter"
                                 MouseLeave="Search_Refund_Number_MouseLeave"
                                 PreviewTextInput="Int_PreviewTextInput"
                                 Style="{StaticResource TxtSearch}"
                                 Text="{Binding SearchRefundNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button x:Name="Btn_Listing_Refund_Number"
                                Grid.Column="2"
                                Width="40"
                                Command="{Binding FilterRefundNumberBtn}"
                                MouseEnter="Search_Refund_Number_MouseEnter"
                                MouseLeave="Search_Refund_Number_MouseLeave"
                                Style="{StaticResource BtnSearch}">
                            <Image x:Name="Search_Refund_Number_Img"
                                   Width="16"
                                   Height="16"
                                   Source="../Resources/loupe_Blue.png" />
                        </Button>

                    </Grid>

                    <Grid Grid.Row="1"
                          Grid.Column="2"
                          Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="29" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Listing_Refund_Customer"
                                 GotFocus="txt_Listing_Refund_Customer_GotFocus"
                                 LostFocus="txt_Listing_Refund_Customer_LostFocus"
                                 MouseEnter="Search_Refund_Customer_MouseEnter"
                                 MouseLeave="Search_Refund_Customer_MouseLeave"
                                 Style="{StaticResource TxtSearch}"
                                 Text="{Binding SearchRefundCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button x:Name="Btn_Listing_Refund_Customer"
                                Grid.Column="2"
                                Width="40"
                                Command="{Binding FilterRefundCustomerBtn}"
                                MouseEnter="Search_Refund_Customer_MouseEnter"
                                MouseLeave="Search_Refund_Customer_MouseLeave"
                                Style="{StaticResource BtnSearch}">
                            <Image x:Name="Search_Refund_Customer_Img"
                                   Width="16"
                                   Height="16"
                                   Source="../Resources/loupe_Blue.png" />
                        </Button>

                    </Grid>

                    <Grid Grid.Row="1"
                          Grid.Column="3"
                          Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="29" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txt_Listing_Refund_Date"
                                 GotFocus="txt_Listing_Refund_Date_GotFocus"
                                 LostFocus="txt_Listing_Refund_Date_LostFocus"
                                 MouseEnter="Search_Refund_Date_MouseEnter"
                                 MouseLeave="Search_Refund_Date_MouseLeave"
                                 PreviewTextInput="Date_PreviewTextInput"
                                 Style="{StaticResource TxtSearch}"
                                 Text="{Binding SearchRefundDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button x:Name="Btn_Listing_Refund_Date"
                                Grid.Column="2"
                                Width="40"
                                Command="{Binding FilterRefundDateBtn}"
                                MouseEnter="Search_Refund_Date_MouseEnter"
                                MouseLeave="Search_Refund_Date_MouseLeave"
                                Style="{StaticResource BtnSearch}">
                            <Image x:Name="Search_Refund_Date_Img"
                                   Width="16"
                                   Height="16"
                                   Source="../Resources/loupe_Blue.png" />
                        </Button>

                    </Grid>

                    <DataGrid x:Name="Listing_Refund"
                              Grid.Row="3"
                              Grid.Column="1"
                              Grid.ColumnSpan="3"
                              ItemsSource="{Binding Listing_Transaction_Refund, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValue="{Binding Transaction_Refund_Selected, Mode=TwoWay}"
                              SelectionChanged="Listing_Refund_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding Id}"
                                                Header="Facture" />
                            <DataGridTextColumn Width="*"
                                                Binding="{tools:Converter_Binding_Employee Employee_id.Id}"
                                                Header="Vendeur" />
                            <DataGridTextColumn Width="*"
                                                Binding="{tools:Converter_Binding_Customer Customer_id.Id}"
                                                Header="Client" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding Date, ConverterCulture='fr-FR', StringFormat=d}"
                                                Header="Date" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding Total, StringFormat=C, ConverterCulture=FR-fr}"
                                                ElementStyle="{StaticResource CellRightAlign}"
                                                Header="Total" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="Btn_Listing_Refund_Export"
                            Grid.Row="5"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Width="300"
                            Margin="25,0"
                            Command="{Binding ExportTransactionRefundBtn}"
                            Content="Exporter la facture de remboursement en PDF"
                            IsEnabled="False"
                            Opacity="0.5"
                            Style="{StaticResource BtnAction}" />

                </Grid>
            </TabItem>
            <!--#endregion-->



        </TabControl>

    </Grid>

</UserControl>
